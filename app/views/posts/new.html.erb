<h1>Insectagram</h1>
<h3>新規投稿</h3>
<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :size => 140 %>

    <%= f.label :comment %>
    <%= f.text_field :comment, :size => 140 %>

    <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
    </div>
    
  </div>

  <%= f.submit "投稿する" %>
  <%= link_to "投稿一覧に戻る", posts_path %>
<% end %>